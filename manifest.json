{
  "manifest_version": 2,
  "name": "Accessibility/Focus",
  "version": "1.0",
  "description": "Reclaim your attention",
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": ["./main.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": ["storage"]
}

